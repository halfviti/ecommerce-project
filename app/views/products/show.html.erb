<div class="row justify-content-center">
    <div class="col-md-6 mt-5">
        <div class="card bg-dark-brown text-white">
            <img class="card-img-top" src="<%= @product.image_url %>" alt="<%= @product.name %>">
            <div class="card-body">
                <h5 class="card-title"><%= @product.name %></h5>
                <p class="card-text"><%= @product.description %></p>
                <%= link_to fa_icon('shopping-cart', text: "Add To Cart", right: true), add_product_cart_index_path(product_id: @product, quantity: 1), method: :post, :class=>"btn btn-dark"%>
            </div>
    </div>
</div>
